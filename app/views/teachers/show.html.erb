<h1><%= @teacher.full_name %></h1>
<% if user_is_admin? && @teacher != current_user %>
  <%= link_to_delete(@teacher) %>
<% end %>
<h3>Teacher ID: <%= @teacher.id_number %></h3>
<h3>Department: <%= @teacher.dept %></h3>
<%= link_to "Edit Profile", edit_teacher_path(current_user) %>
<br><br>
<% if user_is_admin? %>
  <% if @teacher == current_user %>
    <br><br>
    <%= link_to "End Of Year Proceedure", teacher_end_of_year_path(@teacher) %>
  <% end %>
<% else %>
  <h1>Classes</h1>
  <%= new_klass_link %>
  <%= render 'klasses/teacher_klasses' %>
<% end %>
