<h1><%= klass_heading_and_link(@klass) %></h1>
<br>
<h2>Student List</h2>
<h3><%= link_to_add_student_status(@klass) %></h3>
<p>(A number after a students name indicates the number of incomplete homework assignments)</p>
<br>
<% @student_statuses.each do |ss| %>
  <h3>
    <%= link_to ss.last_name_first, klass_student_status_path(@klass, ss) %>
    <% qty = ss.late_homework(@klass.id).count %>
    <% if qty > 0 %>
      &nbsp;<strong><%= qty %></strong>
    <% end %>
  </h3>
<% end %>
