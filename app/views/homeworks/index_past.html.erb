<% if user_is_teacher? %>
  <h1><%= klass_heading_and_link %></h1>
<% else %>
  <h1><%= @klass.name %>, Period <%= @klass.period %></h1>
<% end %>
<h2>Past Homework Assignments</h2>
<% if user_is_teacher? %>
  <%= link_to_future_homework %>
<% else %>
  <%= link_to 'Back To Current Homework', current_user %>
<% end %>
<br><br>
<%= render 'layouts/homeworks' %>
