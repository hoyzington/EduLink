<nav>
  <% if logged_in? %>
    <%= link_to "Home", home_path, class: "" %>
    <%= link_to "Log Out", logout_path, method: :delete, class: "" %>
    <% if logged_in? && user_is_teacher? %>
      <%= link_to "Edit Profile", edit_teacher_path(current_user), class: "" %>
