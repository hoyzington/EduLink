      <% else %>
        <%= link_to "My Classes", teacher_klasses_path(current_user), class: "" %>
        <%= link_to "Add Class", new_teacher_klass_path(current_user), class: "" %>
      <% end %>
    <% end %>
  <% end %>
</nav>

