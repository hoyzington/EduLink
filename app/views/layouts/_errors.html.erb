<h1>No errors</h1>
<% if obj.errors.any? %>
  <div id="error_explanation">
    <h2>
      The following <%= pluralize(obj.errors.count, "error") %> occurred:
    </h2>
    <ul>
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% else %>
  <h1>No errors</h1>
<% end %>
